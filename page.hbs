{{!< default }}

{{#post}}

  {{!-- Using a page-specific header to display the page title rather than site name --}}
  <header class="header">
    <div class="header__menu">
      {{navigation}}
    </div>
    <div class="header__title {{#is " post "}}header__title--small{{/is}}">
      <h1 class="header__title-text">{{title}}</h1>
    </div>
  </header>

  <main class="page-template">
    <article class="page-template__main {{post_class}}">

      {{#if feature_image}}
      <figure class="page-template__image" style="background-image: url({{feature_image}})">
      </figure>
      {{/if}}

      <section class="page-template__content {{#unless feature_image}}page-template__content--no-img{{/unless}}">
        {{content}}
      </section>

      {{> footer}}
    </article>
  </main>

{{/post}}